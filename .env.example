# Site Configuration
# The production URL of your site (used for metadata, sitemap, etc.)
NEXT_PUBLIC_SITE_URL=https://jonathoncarter.com

# Cloudinary Configuration
# Get these values from your Cloudinary dashboard
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Upload Protection (set a secret key to protect upload endpoints)
# DO NOT use NEXT_PUBLIC_ prefix for secrets - it exposes them to the client
UPLOAD_SECRET_KEY=your_secret_upload_key_here