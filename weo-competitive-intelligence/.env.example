# Email Configuration (Required)
# Use Gmail app-specific password, not your regular password
EMAIL_USER=your.email@gmail.com
EMAIL_PASS=xxxx-xxxx-xxxx-xxxx
ALERT_EMAIL=alerts@weomedia.com

# Additional Alert Recipients (comma-separated)
CC_EMAILS=team@weomedia.com,marketing@weomedia.com

# System Configuration
NODE_ENV=production
PORT=3000
DATA_DIR=./data
LOG_LEVEL=info

# Browser Settings (Optimized for Mac M3)
HEADLESS=true
BROWSER_TIMEOUT=30000
CONCURRENT_SCANS=2
SCREENSHOT_QUALITY=80

# Monitoring Schedule (cron format)
COMPETITOR_SCHEDULE=0 */6 * * *
RANKING_SCHEDULE=0 2 * * *
PERFORMANCE_SCHEDULE=0 3 * * 1
REPORT_SCHEDULE=0 9 * * 1

# Data Retention (days)
SCREENSHOT_RETENTION=30
LOG_RETENTION=60
REPORT_RETENTION=90

# Rate Limiting (milliseconds)
SEARCH_DELAY=5000
COMPETITOR_DELAY=3000

# Feature Flags
ENABLE_SCREENSHOTS=true
ENABLE_RANKINGS=true
ENABLE_PERFORMANCE=true
ENABLE_ALERTS=true
ENABLE_REPORTS=true

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false